@model WebApplicationIS.Models.SimulationModel

<h1>Simulation de croissance d'une startup</h1>

<form asp-action="Index" method="post">
    <label>Taux de croissance (r) :</label>
    <input asp-for="R" type="number" step="0.01" required /><br />

    <label>Capacité maximale (K) :</label>
    <input asp-for="K" type="number" step="1" required /><br />

    <label>Nombre initial de clients (N0) :</label>
    <input asp-for="N0" type="number" step="1" required /><br />

    <button type="submit">Simuler</button>
</form>

@if (Model.Resultats != null && Model.Resultats.Count > 0)
{
    <h2>Résultats</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Jour</th>
                <th>Nombre d'utilisateurs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var point in Model.Resultats)
            {
                <tr>
                    <td>@point.Temps</td>
                    <td>@point.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
}
